unit uDMQuestions;

interface

uses
  System.SysUtils, System.Classes, FireDAC.Stan.Intf, FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt, Data.DB, FireDAC.Comp.DataSet, FireDAC.Comp.Client;

type
  TdmQuestions = class(TDataModule)
    qryQuestionsGetItem: TFDQuery;
    qryQuestionsPostItem: TFDQuery;
    procedure DataModuleCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  dmQuestions: TdmQuestions;

implementation

{%CLASSGROUP 'System.Classes.TPersistent'}

uses uDM;

{$R *.dfm}

procedure TdmQuestions.DataModuleCreate(Sender: TObject);
begin
  if (FDM = nil) then
  begin
    FDM := TDM.Create(nil);
  end;

  qryQuestionsGetItem.Connection  := FDM.conQuiz;
  qryQuestionsPostItem.Connection := FDM.conQuiz;
end;

end.
